{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "storm-ui",
    "labels": {
      "name": "storm-ui"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "storm-ui",
        "image": "storm",
        "args": [
          "storm",
          "ui",
          "-c",
          "storm.zookeeper.servers='[\"zookeeper\"]'",
          "-c",
          "nimbus.host=nimbus"
        ],
        "ports": [
          {
            "name": "storm-ui-http",
            "containerPort": 8080
          }
        ],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        }
      }
    ]
  }
}
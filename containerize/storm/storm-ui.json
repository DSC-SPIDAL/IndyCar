{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "storm-ui",
    "labels": {
      "name": "storm-ui"
    }
  },
  "spec": {
    "volumes": [
      {
        "name": "config",
        "hostPath": {
          "path": "/home/chathura/config"
        }
      }
    ],
    "containers": [
      {
        "name": "storm-ui",
        "image": "storm",
        "args": [
          "storm",
          "ui"
        ],
        "ports": [
          {
            "name": "storm-ui-http",
            "containerPort": 8080
          }
        ],
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        },
        "volumeMounts": [
          {
            "name": "config",
            "mountPath": "/config"
          }
        ]
      }
    ]
  }
}
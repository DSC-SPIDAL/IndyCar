{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "nimbus",
    "labels": {
      "name": "nimbus"
    }
  },
  "spec": {
    "volumes": [
      {
        "name": "topologies", 
        "hostPath": {
          "path": "/home/chathura/data"
        }
      }
    ],
    "containers": [ 
      {
        "name": "nimbus", 
        "image": "storm",
        "ports": [
          {
            "containerPort": 6627 
          }
        ], 
        "resources": {
          "limits": {
            "cpu": "100m"
          }
        },
        "volumeMounts": [
          {
            "name": "topologies",
            "mountPath": "/data/topologies"
          }
        ]
      }
    ]
  }
}
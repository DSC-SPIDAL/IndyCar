{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "nimbus",
    "labels": {
      "name": "nimbus"
    }
  },
  "spec": {
    "volumes": [
      {
        "name": "topologies",
        "hostPath": {
          "path": "/home/cwidanage/k8/data"
        }
      },
      {
        "name": "config",
        "hostPath": {
          "path": "/home/cwidanage/k8/config"
        }
      }
    ],
    "containers": [
      {
        "name": "nimbus",
        "image": "storm",
        "args": [
          "storm",
          "nimbus"
        ],
        "ports": [
          {
            "containerPort": 6627
          }
        ],
        "resources": {
          "limits": {
            "cpu": "1"
          }
        },
        "volumeMounts": [
          {
            "name": "topologies",
            "mountPath": "/data/topologies"
          },
          {
            "name": "config",
            "mountPath": "/config"
          }
        ]
      }
    ]
  }
}